@page "/contact/{Id}"
@if (@Id != "1")
{
    <h1>Contact [Id=@Id] details</h1>
}
else
{
    <h1>New Contact details</h1>
}
@if (Contact == null)
{
    <p>Loading ...</p>
}
else
{
    <div class="row">
        <div-- class="col-md-12">
            <div class="form-group row">
                <label class="col-sm-4 col-form-label">Name</label>
                <div class="col-sm-8">
                    <label type="text" readonly class="form-control-plaintext">@Contact.Name</label>
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-4 col-form-label">Surname</label>
                <div class="col-sm-8">
                    <label type="text" readonly class="form-control-plaintext">@Contact.Surname</label>
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-4 col-form-label">Email</label>
                <div class="col-sm-8">
                    <label type="text" readonly class="form-control-plaintext">@Contact.Email</label>
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-4 col-form-label">Password</label>
                <div class="col-sm-8">
                    <label type="text" readonly class="form-control-plaintext">@Contact.Password</label>
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-4 col-form-label">Phone</label>
                <div class="col-sm-8">
                    <label type="text" readonly class="form-control-plaintext">@Contact.Phone</label>
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-4 col-form-label">Category</label>
                <!--div class="col-sm-8">
                    <label type="text" readonly class="form-control-plaintext">@Contact.CategoryId</label>
                <div-->
                <div class="col-sm-8">
                    <InputSelect id="category" @bind-Value="Contact.CategoryId" class="form-control" disabled=@Id.Equals("1")>
                        @foreach (var category in Categories)
                        {
                            <option value="@category.Id">@category.Name</option>
                        }
                    </InputSelect>
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-4 col-form-label">SubCategory</label>
                <div class="col-sm-8">
                    <label type="text" readonly class="form-control-plaintext">@Contact.SubCategory</label>
                </div>
            </div>
    </div>
                </div>
}
