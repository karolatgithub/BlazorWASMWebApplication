@page "/login"
@using BlazorWASMWebApplication.Shared
<EditForm EditContext="ViewContext">
    <div class="row">
        <div class="col-md-12">
            <div class="form-group row">
                <label for="Email" class="col-sm-4 col-form-label">Email</label>
                <div class="col-sm-8">
                    <InputText id="Email" @bind-Value="@Email" class="form-control" />
                </div>
            </div>
            <div class="form-group row">
                <label for="Password" class="col-sm-4 col-form-label">Password</label>
                <div class="col-sm-8">
                    <InputText id="Password" type="password" @bind-Value="@Password" @bind-Value:after="CheckPassword" class="form-control" />
                </div>
            </div>
            <div class="form-group row">
                <div class="col-sm-4">
                </div>
                <div class="col-sm-8">
                    <Button id="LoginDisabled" @onclick='() => NavigationManager.NavigateTo($"contacts/true")' disabled="@NotLogged">Login</Button>
                    <Button id="Cancel" @onclick='() => NavigationManager.NavigateTo($"contacts/false")'>Cancel</Button>
                </div>
            </div>
        </div>
    </div>
</EditForm>
